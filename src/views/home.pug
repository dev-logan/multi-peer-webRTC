doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        title 홈트게더 MVP
        link(rel="stylesheet" href="https://unpkg.com/mvp.css")
        style(type="text/css").
            video {
                -webkit-transform: scaleX(-1);
                transform: scaleX(-1);
            }
    body 
        header
            h1 홈트게더 MVP
        main
            div#welcome
                form
                    input#nickname(placeholder='사용자 이름', required, type='text')
                    input#roomName(placeholder='방 이름', required, type='text')
                    button 방 입장
            div#call
                div#streams
                    div#myStream
                        video#myFace(autoplay, playsinline, width='400', height='400')
                        h3#userNickname
                div#controlers
                    button#mute 마이크 끄기
                    button#camera 카메라 끄기
                    select#cameras
                    button#leave 나가기
        script(src="/socket.io/socket.io.js")
        script(src="/public/js/app.js")